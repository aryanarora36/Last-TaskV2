<mvc:View controllerName="in.aryan.task.project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    id="Main">

    <Page id="MainPage" title="Product List">
        <content>
            <!-- Search Bar -->
            <SearchField
                id="productSearch"
                width="100%"
                placeholder="Search by Product Name"
                search=".onSearch" />

            <!-- Toolbar with Show Chart Button -->
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="Show Chart" press=".onShowChart" />
            </OverflowToolbar>

            <!-- Responsive Table -->
            <Table
                id="productTable"
                items="{
                    path: '/Products',
                    parameters: {
                        $top: 10
                    }
                }"
                mode="SingleSelectMaster"
                itemPress=".onItemPress"
                growing="true"
                growingScrollToLoad="true"
                growingThreshold="10"
                busyIndicatorDelay="0">

                <columns>
                    <Column><Text text="ID" /></Column>
                    <Column><Text text="Name" /></Column>
                    <Column><Text text="Price (USD)" /></Column>
                </columns>

                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{ProductID}" />
                            <Text text="{ProductName}" />
                            <Text text="{UnitPrice}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

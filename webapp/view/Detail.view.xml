<mvc:View
  controllerName="in.aryan.task.project1.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page
    id="detailPage"
    title="{i18n>ProductDetails}"
    showNavButton="true"
    navButtonPress=".onNavBack">

    <content>
      <ObjectHeader
        title="{ProductName}"
        number="{UnitPrice}"
        numberUnit="USD"
        intro="{i18n>ProductID} {ProductID}" />

      <VBox class="sapUiSmallMargin">
        <Text text="{i18n>QuantityperUnit} {QuantityPerUnit}" />
        <Text text="{i18n>UnitsinStock} {UnitsInStock}" />
        <Text text="{i18n>Discontinued} {Discontinued}" />
      </VBox>
    </content>
  </Page>
</mvc:View>
